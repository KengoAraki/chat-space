.chat-side
  .chat-side__user
    .chat-side__user-content
      %h4.chat-side__user-content-name= current_user.name
      = link_to new_group_path, class: "chat-side__user-content--new-group" do
        %i.fa.fa-pencil-square-o
      = link_to edit_user_registration_path, class: "chat-side__user-content--edit-user" do
        %i.fa.fa-cog

  .chat-side__groups
    .chat-side__groups-list
      = render partial: "group", collection: @groups